pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                powershell 'mvn clean package --file app/pom.xml'
            }
        }
      stage('SCA SC') {
         steps {
	 withCredentials([string(credentialsId: 'SCA_Token', variable: 'SRCCLR_API_TOKEN')]) {
		powershell """
                  Set-ExecutionPolicy AllSigned -Scope Process -Force
                  iex ((New-Object System.Net.WebClient).DownloadString('https://download.srcclr.com/ci.ps1')) 
                  srcclr scan ./app --update-advisor --allow-dirty
		        """
		}
             }
         }
		stage('Veracode Pipeline Scan') {
            steps {
                powershell """
                  curl  https://downloads.veracode.com/securityscan/pipeline-scan-LATEST.zip -o pipeline-scan.zip
                  Expand-Archive -Force -Path pipeline-scan.zip -DestinationPath veracode_scanner
                  java -jar ./pipeline-scan.jar -vid '${VERACODE_API_ID}' -vkey '${VERACODE_API_KEY}' --file ./app/target/verademo.war --issue_detail true
                	"""
			}
		}
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
	post {
	    always {
	      archiveArtifacts artifacts: 'results.json', fingerprint: true
	    }
	}
}
